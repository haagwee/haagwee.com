section.section
  h1.title Projects
  .columns.is-multiline
    - @projects.each do |project|
      .column.is-12-mobile.is-6-tablet.is-3-desktop
        .card.is-shadowless.is-slightly-rounded
          .card-image
            figure.image
              = link_to project_path(project) do
                = image_tag project.image.variant(combine_options: {resize: '256x256^', extent: '256x256', gravity: 'Center'})
          .card-content
            .content
              p
                span.title.is-4.is-capitalized
                  = link_to project.title, project_path(project)
                br
                span= l(project.created_at, format: :short)
